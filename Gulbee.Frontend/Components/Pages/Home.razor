@page "/"
@attribute [StreamRendering]

<PageTitle>Home</PageTitle>

<header class="hero">
    <div class="container">
        <h1 class="display-4">Witaj w Gulbee!</h1>
        <p class="lead">Mini gierka, w której zgadujesz produkty po ich składzie. Dodawaj nowe produkty i sprawdź swoje umiejętności!</p>
        <a href="#features" class="btn btn-light btn-lg">Dowiedz się więcej</a>
    </div>
</header>

<section id="features" class="features">
    <div class="container">
        <h2 class="text-center mb-4">Cechy aplikacji</h2>
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Interaktywna gra</h5>
                        <p class="card-text">Zgaduj produkty na podstawie ich składu i rozwijaj swoje umiejętności.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Dodawanie produktów</h5>
                        <p class="card-text">Możesz dodawać nowe produkty, aby gra była jeszcze bardziej interesująca!</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Przyjazny interfejs</h5>
                        <p class="card-text">Zaprojektowana z myślą o użytkownikach, aby gra była łatwa i przyjemna.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<footer class="text-center py-4">
    <div class="container">
        
        <a href="#login" class="btn btn-primary">Zaloguj się</a>
        <a href="#register" class="btn btn-secondary">Zarejestruj się</a>
    </div>
</footer>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>