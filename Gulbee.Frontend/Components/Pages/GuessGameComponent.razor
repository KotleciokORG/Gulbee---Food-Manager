                <th>Sugar</th>
                <th>Proteins</th>
                <th>Salt</th>
            </thead>
            <tbody>
                
            </tbody>
        </table>
    </div>
    <div class="row"></div>
    <div class="row"></div>
</div>    


@code{
    private Product product;
    protected async override Task OnInitializedAsync(){
        product = await ProductClient.GetProductAsync(2);
    }
